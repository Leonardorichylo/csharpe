@{
    var nomeView= (string) ViewData["NomeView"];
}
<!DOCTYPE html>
<html lang="pt-br">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Rolê Top</title>
    <link href="img/logo.png" rel="icon" type="image/x-icon"/>
    <link href="https://fonts.googleapis.com/css?family=Baloo&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Londrina+Solid:900%7COpen+Sans" rel="stylesheet">
    <link href="css/style.css" rel="stylesheet" type="text/css">
    @if(!"Home".Equals(nomeView))
    {
        <link href="~/css/style-secondary-pages.css" rel="stylesheet" type="text/css">
        <link href="~/css/style-form-pages.css" rel="stylesheet" type="text/css">
    }
    <!-- Importar o Font Awesome para o projeto -->
    <script src="https://kit.fontawesome.com/349a64cb04.js"></script>
</head>

<body>
    <header>
        <nav>
            <div class="section-container">
                <ul>
                    <li id="bt-mobile-menu">
                        <!-- HTML para colocar os ícones do FA -->
                        <a href="javascript:void(0);" class="icon" onclick="toggleMobileMenu()">
                            <i class="fa fa-bars"></i>
                        </a>
                    </li>
                    <li class="bt-common-menu"><a onclick="toggleMobileMenu()" href="index.html" class="active">Principal</a></li>
                    <li class="bt-common-menu"><a onclick="toggleMobileMenu()" href="index.html#quemsomos">Quem Somos</a></li>
                    <li class="bt-common-menu"><a onclick="toggleMobileMenu()" href="index.html#espaço">Espaço</a></li>
                    <li class="bt-common-menu"><a onclick="toggleMobileMenu()" href="index.html#eventos">Eventos</a></li>
                    <li class="bt-common-menu"><a onclick="toggleMobileMenu()" href="index.html#galeria">Galeria</a></li>
                    <li class="bt-common-menu"><a onclick="toggleMobileMenu()" href="index.html#depoimentos">Depoimentos</a></li>
                    <li class="bt-common-menu"><a onclick="toggleMobileMenu()" href="index.html#local">Local</a></li>
                    <li class="bt-common-menu"><a onclick="toggleMobileMenu()" href="login.html">Login</a></li>
                    <li><a id="bt-faca_seu_orcamento" href="orçamento.html">Faça seu Orçamento!</a></li>
                </ul>
            </div>
        </nav>
        <!--Aqui foi removido o logo-area e trasferido no _HeaderHomePage-->
@if("Home".Equals(nomeView))
{
    Html.RenderPartial("_HeaderHomePage");
}
    </header>
            @RenderBody()
            <footer>
        <div class="section-container">
                <img src="img/logo.png"/>
                <address>
                    Avenida de Limeira, 539 - Campos Elíseos - SP
                    <br />
                    roletopemail.com
                    <br />
                    11 1234 6789
                </address>
                <img src="img/icon-facebook.png" alt="Face" title="Facebook" />
                <img src="img/icon-instagram.png" alt="Insta" title="Instagram" />
        </div>
    </footer>

    <script>
        function toggleMobileMenu() {
            var ul = document.querySelector("nav ul");
            var commonButtons = document.querySelectorAll("nav .bt-common-menu");
            var icon = document.querySelector(".icon > i");

            ul.classList.toggle("mobile-mode");

            if (icon.classList.contains("fa-bars")) {
                icon.classList.remove("fa-bars");
                icon.classList.remove("fa");

                icon.classList.add("fas");
                icon.classList.add("fa-angle-left");
            } else {
                icon.classList.remove("fas");
                icon.classList.remove("fa-angle-left");

                icon.classList.add("fa");
                icon.classList.add("fa-bars");
            }

            for (var button of commonButtons) {
                button.classList.toggle("active");
            }

        }
        
    </script>
</body>
<!-- Fim -->
</html>